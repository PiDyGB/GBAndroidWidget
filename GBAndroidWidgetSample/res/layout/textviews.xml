<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.gb.android.widget.Button
        android:id="@+id/button_open_textviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CLOSE"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/slideTextviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:visibility="gone">

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:typeface="Ubuntu-Regular.ttf"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scale_tracking="0.1"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scale_tracking="0.5"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scale_tracking="1.0"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scale_tracking="1.5"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scale_tracking="2.0"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scale_tracking="2.5"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:to_upper_case="true"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scale_tracking="0.1"
            app:to_upper_case="true"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>

        <com.gb.android.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView che va su due meledettissime righe"
            app:scale_tracking="1"
            app:to_upper_case="true"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.TextView>
    </LinearLayout>

</LinearLayout>