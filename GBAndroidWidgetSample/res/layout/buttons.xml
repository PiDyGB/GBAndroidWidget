<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.gb.android.widget.Button
        android:id="@+id/button_open_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="CLOSE"
        tools:ignore="HardcodedText" />

    <com.gb.android.widget.SlidingLinearLayout
        android:id="@+id/slideButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:expanded="true" >

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:typeface="Ubuntu-Regular.ttf"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scaleLetterSpacing="0.1"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scaleLetterSpacing="0.5"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scaleLetterSpacing="1.0"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scaleLetterSpacing="1.5"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scaleLetterSpacing="2.0"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scaleLetterSpacing="2.5"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:textUpperCase="true"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView"
            app:scaleLetterSpacing="0.1"
            app:textUpperCase="true"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>

        <com.gb.android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My TrackingTextView che va su due meledettissime righe"
            app:scaleLetterSpacing="1"
            app:textUpperCase="true"
            tools:ignore="HardcodedText" >
        </com.gb.android.widget.Button>
    </com.gb.android.widget.SlidingLinearLayout>

</LinearLayout>